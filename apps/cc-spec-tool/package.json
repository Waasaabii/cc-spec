{
  "name": "cc-spec-tool",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently -k -n \"tauri,sidecar\" -c \"yellow,magenta\" \"tauri dev\" \"bun run watch:sidecar\"",
    "watch:sidecar": "cargo watch -C src-tauri -w src/bin -x \"build --bin cc-spec-codex-relay --bin cc-spec-codex-notify\"",
    "build:sidecar": "cargo build --manifest-path src-tauri/Cargo.toml --bin cc-spec-codex-relay --bin cc-spec-codex-notify",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "tauri": "tauri"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.2.0",
    "ansi-to-react": "^6.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-syntax-highlighter": "^16.1.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@tauri-apps/cli": "^2.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2",
    "vite": "^6.1.0"
  }
}