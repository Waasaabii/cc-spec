{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cc-spec tools",
  "version": "0.1.0",
  "identifier": "cc.spec.tools",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "sidecar/cc-spec"
    ],
    "resources": [
      "resources/skills/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "security": {
      "capabilities": [
        "default"
      ],
      "csp": "default-src 'self' http://localhost:5173 http://127.0.0.1:5173; connect-src 'self' http://127.0.0.1:* http://localhost:* ws://127.0.0.1:* ws://localhost:*; img-src 'self' data:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; script-src 'self' 'unsafe-inline' 'unsafe-eval'"
    },
    "windows": [
      {
        "title": "cc-spec tools",
        "width": 1180,
        "height": 820,
        "resizable": true,
        "decorations": false
      }
    ]
  }
}